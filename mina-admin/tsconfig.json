{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "noLib": false,
    "forceConsistentCasingInFileNames": true,
    "strictFunctionTypes": false,
    "jsx": "preserve",
    "baseUrl": ".",
    "allowJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "experimentalDecorators": true,
    "lib": ["DOM", "ESNext"],
    "noImplicitAny": false,
    "removeComments": true,
    "paths": {
      "@/*": ["src/*"],
      "#/*": ["types/*"]
    },
    "types": [
      "vite/client",
    ],
    "strictNullChecks": true,
    "isolatedModules": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "src/**/*.vue",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "types/**/*.d.ts",
    "types/**/*.ts",
    "build/**/*.ts",
    "build/**/*.d.ts",
    "vite.config.ts",
  ],
  "exclude": ["dist", "node_modules", "cypress", "**/*.js", "tests/server/**/*.ts"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
